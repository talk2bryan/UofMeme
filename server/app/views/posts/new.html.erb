<h2>Upload your own meme</h2>
<%= form_for @post, html: { multipart: true } do |f| %>

<form>
    <%= f.hidden_field :poster, value: current_user.username%>
    <%= f.hidden_field :user_id, value: current_user.id%>
    <div class="form-group row">
        <%= f.label :image, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= f.file_field :image %>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :description, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= f.text_area :description %>
        </div>
    </div>
    
    <div class="form-group row">
        <%= f.label :top_txt, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= f.text_area :description %>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :bot_txt, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= f.text_area :description %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <%= f.submit "Post my meme!", class: 'btn btn-primary' %>
        </div>
    </div>
</form>

<%= link_to 'Back', url_for(:back) %>
<% end %>