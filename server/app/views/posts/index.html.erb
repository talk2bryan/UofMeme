<section class="jumbotron text-center">
 	<div class="container">

 		<h1 class="jumbotron-heading">UofMeme</h1>

 		<p class="lead text-muted">UofMeme is an application that allows students and employees of the University of Manitoba to create and share memes with each other. This application encourages users to express themselves creatively and reduce stress or anxiety through the use of humour.</p>
    	
    	<p>
     		<%= link_to "Upload Meme Now!", new_post_path, class: "btn btn-primary my-2" %>
    	</p>

  	</div>
</section>

<div class="py-5 bg-light">
 	<div class="container">
		<div class="row">
			<% if @posts.blank? %>
				<p> There are no posts available at this time</p>
			<% else %>
				<% @posts.each do |c| %>
					<div class=" col-md-4 col-lg-3 col-xl-2">
						<div class="thumbnail">
							<div class="card mb-4 box-shadow">

								<%= link_to (image_tag (c.image(:medium)), :class => "posts card-img-top img-responsive img-fluid"), {:action => 'show', :id => c.id} %>
					
								<p class="p_desc">
									<h5 class="p_desc_h"><%= c.description %></h5>
								</p>

								<div class="" style="text-align:center;">
									<button type="button" class = "like-btn btn-info" arie-label="Left Align" > 
										<span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
										<span class="like-badge"> <%=c.like %> </span>
									</button>

									<button type="button" class = "dislike-btn btn-info" arie-label="Left Align"> 
										<span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
										<span class="dislike-badge" ><%=c.dislike%></span>
									</button>
									
									<a href="#" class="glyphicon glyphicon-share"></a>
								</div>

							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
