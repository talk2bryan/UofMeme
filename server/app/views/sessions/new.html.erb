<% provide(:title, "Log in") %>
<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
<form>
	

	<div class="form-group row">
	    <%= f.label :email, :class => "col-sm-2 col-form-label" %>
	    <div class="col-sm-10">
	        <%= f.email_field :email %>
	    </div>
	</div>

	<div class="form-group row">
	    <%= f.label :password, :class => "col-sm-2 col-form-label" %>
	    <div class="col-sm-10">
	        <%= f.password_field :password %>
	    </div>
	</div>

	<div class="form-group row">
	    <%= f.label :remember_me, :class => "col-sm-2 col-form-label checkbox inline" %>
	    <div class="col-sm-10">
	        <%= f.check_box :remember_me %>
	        Remember me on this computer
	    </div>
	</div>

	<div class="form-group row">
	    <div class="col-sm-10">
	        <%= f.submit "Log in", class: 'btn btn-primary' %>
	    </div>
	</div>
</form>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>

<%= link_to 'Back', users_path%>

